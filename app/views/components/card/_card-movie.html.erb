<div class="card col-md-4 px-0" >
  <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="Poster for <%= bookmark.movie.title %>">
  <div class="card-body">
    <h5 class="card-title"><%=  bookmark.movie.title %></h5>
    <p class="card-text"><%= bookmark.movie.overview %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= bookmark.comment %></li>
    <li class="list-group-item"><%= link_to "Delete", delete_bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  </ul>
</div>
