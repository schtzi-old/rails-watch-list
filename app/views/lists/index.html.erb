<%= render 'components/banner' %>
<div class="container">
  <div class="d-flex">
    <div class="list-grid flex-grow-1">
        <% @lists.each do |list| %>
          <%= render 'components/card/card-list', {list: list} %>
        <% end %>
    </div>
    <div class="form-list">
      <h2>Create a new list</h2>
      <%= render "new", { list: @list}  %>
      </div>
  </div>
</div>
